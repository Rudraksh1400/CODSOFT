                cout<<"Player 2 can play : ";
                cin>>ch;
                switch(ch)
                {
                    case 1:
                    {
                        if(a[0][0]=='x' || a[0][0]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[0][0] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                    case 2:
                    {
                        if(a[0][1]=='x' || a[0][1]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[0][1] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                    case 3:
                    {
                        if(a[0][2]=='x' || a[0][2]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[0][2] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                    case 4:
                    {
                        if(a[1][0]=='x' || a[1][0]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[1][0] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                    case 5:
                    {
                        if(a[1][1]=='x' || a[1][1]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[1][1] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                    case 6:
                    {
                        if(a[1][2]=='x' || a[1][2]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[1][2] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                    case 7:
                    {
                        if(a[2][0]=='x' || a[2][0]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[2][0] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                    case 8:
                    {
                        if(a[2][1]=='x' || a[2][1]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[2][1] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                    case 9:
                    {
                        if(a[2][2]=='x' || a[2][2]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[2][2] = 'o';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            co++;
                            break;
                        }
                    }
                }
            }
        }
        if(result == 1)
        {
            cout<<"Player 1 won";
        }
        else if(result == 2)
        {
            cout<<"Player 2 won";
        }
        else if(result==0)
        {
            cout<<"Draw";
        }
        cout<<endl<<"Do you want to play another game?"<<endl;
        cout<<"Press 1 to play again : ";
        cin>>ans;
    }
}
