#include<iostream>
using namespace std;
int main()
{
    int ans = 1,result = 0,ch;
    char a[3][3];
    while(ans == 1)
    {
        int cx = 0;
        int co = 0;
        for(int i=0;i<3;i++)
        {
            for(int j=0;j<3;j++)
            {
                a[i][j] = '_';
            }
        }
        for(int i=0;i<3;i++)
        {
            for(int j=0;j<3;j++)
            {
                cout<<a[i][j]<<" ";
            }
            cout<<endl;
        }
        while(cx<5 && co<=4)
