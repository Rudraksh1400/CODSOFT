            if((a[0][0]=='x' && a[0][1]=='x' && a[0][2]=='x') || (a[1][0]=='x' && a[1][1]=='x' && a[1][2]=='x') || (a[2][0]=='x' && a[2][1]=='x' && a[2][2]=='x') || (a[0][0]=='x' && a[1][0]=='x' && a[2][0]=='x') || (a[0][1]=='x' && a[1][1]=='x' && a[2][1]=='x') || (a[0][2]=='x' && a[1][2]=='x' && a[2][2]=='x') || (a[0][0]=='x' && a[1][1]=='x' && a[2][2]=='x') || (a[0][2]=='x' && a[1][1]=='x' && a[2][0]=='x'))
            {
                result = 1;
                cx = 7;
                co = 7;
                break;
            }
