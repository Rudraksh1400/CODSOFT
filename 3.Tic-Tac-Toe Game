            {
                result = 2;
                cx = 7;
                co = 7;
                break;
            }
            else if(cx==co)
            {
                cout<<"Player 1 can play : ";
                cin>>ch;
                switch(ch)
                {
                    case 1:
                    {
                        if(a[0][0]=='x' || a[0][0]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[0][0] = 'x';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            cx++;
                            break;
                        }
                    }
                    case 2:
                    {
                        if(a[0][1]=='x' || a[0][1]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[0][1] = 'x';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            cx++;
                            break;
                        }
                    }
                    case 3:
                    {
                        if(a[0][2]=='x' || a[0][2]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[0][2] = 'x';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            cx++;
                            break;
                        }
                    }
                    case 4:
                    {
                        if(a[1][0]=='x' || a[1][0]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[1][0] = 'x';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            cx++;
                            break;
                        }
                    }
                    case 5:
                    {
                        if(a[1][1]=='x' || a[1][1]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[1][1] = 'x';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            cx++;
                            break;
                        }
                    }
                    case 6:
                    {
                        if(a[1][2]=='x' || a[1][2]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[1][2] = 'x';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            cx++;
                            break;
                        }
                    }
                    case 7:
                    {
                        if(a[2][0]=='x' || a[2][0]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[2][0] = 'x';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            cx++;
                            break;
                        }
                    }
                    case 8:
                    {
                        if(a[2][1]=='x' || a[2][1]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[2][1] = 'x';
                            for(int i=0;i<3;i++)
                            {
                                for(int j=0;j<3;j++)
                                {
                                    cout<<a[i][j]<<" ";
                                }
                                cout<<endl;
                            }
                            cx++;
                            break;
                        }
                    }
                    case 9:
                    {
                        if(a[2][2]=='x' || a[2][2]=='o')
                        {
                            cout<<"Move already played.Play different move."<<endl;
                            break;
                        }
                        else 
                        {
                            a[2][2] = 'x';
                            for(int i=0;i<3;i++)
